<UserControl x:Class="ConwayLife.Controls.GameGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConwayLife.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Storyboard x:Key="to_alive">
            <ColorAnimation Duration="00:00:00.2" Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)" To="Black"></ColorAnimation>
        </Storyboard>
        <Storyboard x:Key="to_death">
            <ColorAnimation  Duration="00:00:00.2" Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)" To="White"></ColorAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Grid Background="White" Width="512" Height="384" d:Width="128" d:Height="96" x:Name="game_grid">
        <Grid.Resources>
            <Style TargetType="Rectangle">
                <Setter Property="Fill" Value="White"></Setter>
                <EventSetter Event="MouseLeftButtonDown" Handler="ChangeLifeState"></EventSetter>

                <Style.Triggers>
                    <Trigger Property="Tag" Value="{x:Static local:CeilState.Alive}">
                        <Trigger.EnterActions>
                            <BeginStoryboard Storyboard="{StaticResource to_alive}"></BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard Storyboard="{StaticResource to_death}"></BeginStoryboard>
                        </Trigger.ExitActions>
                        <Trigger.Setters>
                            <!--Setter Property="Fill" Value="Black"></Setter!-->
                        </Trigger.Setters>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
